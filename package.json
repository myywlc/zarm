{
  "name": "zarm",
  "version": "2.5.6",
  "description": "基于 React 的移动端UI库",
  "tags": [
    "zarm",
    "zarm-ui",
    "react",
    "react-zarm",
    "zhongan"
  ],
  "keywords": [
    "react",
    "react-ui",
    "react-component",
    "zarm",
    "zarm-ui",
    "zarm-mobile",
    "component",
    "components",
    "ui",
    "framework",
    "frontend",
    "mobile"
  ],
  "license": "MIT",
  "repository": "git://github.com/ZhongAnTech/zarm",
  "bugs": {
    "url": "https://github.com/ZhongAnTech/zarm/issues"
  },
  "module": "es/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf types lib es dist native assets coverage rnkit/zarm rnkit/ios/build rnkit/bundle",
    "dev": "zarm dev",
    "dev:ios": "concurrently \"zarm dev --mode native\" \"react-native run-ios --project-path rnkit/ios\"",
    "dev:android": "concurrently \"zarm dev --mode native\" \"react-native run-android --root rnkit\"",
    "build:types": "tsc --outDir lib -d --emitDeclarationOnly",
    "build:es": "rimraf es && zarm build --mode es --path components --out-dir es --copy-files --build-css",
    "build:lib": "rimraf lib && zarm build --mode lib --path components --out-dir lib --copy-files --build-css",
    "build:umd": "rimraf dist && zarm build --mode umd --path components/style/entry.tsx,components/index.tsx --out-dir dist && zarm build --mode umd-ugly --path components/style/entry.tsx,components/index.tsx --out-dir dist",
    "build:rn": "rimraf native && zarm build --mode native --path components --out-dir native",
    "build": "npm run build:lib && npm run build:es && npm run build:umd && npm run build:rn && npm run build:types",
    "bundle:ios": "cd rnkit && npm run bundle:ios",
    "bundle:android": "cd rnkit && npm run bundle:android",
    "bundle": "rimraf rnkit/zarm && zarm build --mode native --path components --out-dir rnkit/zarm && npm run bundle:ios && npm run bundle:android",
    "deploy:build": "rimraf assets && mkdir assets && touch assets/CNAME && echo 'zarm.design' > assets/CNAME && zarm deploy",
    "deploy": "npm run deploy:build -- -p && gh-pages -d assets",
    "lint:ts": "eslint --ext .ts,.tsx components",
    "lint:js": "eslint --ext .js,.jsx components site rnkit/pages",
    "lint:style": "stylelint \"components/**/*.scss\" \"site/**/*.scss\" --syntax scss",
    "lint": "npm run lint:ts && npm run lint:js && npm run lint:style",
    "test:h5": "cross-env TZ=America/New_York zarm test -s scripts/jest/setup.js",
    "test:rn": "zarm test -m native -s scripts/jest/setup.js",
    "test": "rimraf coverage && npm run test:h5 -- -c && cp ./coverage/coverage-final.json ./coverage/coverage-h5-final.json && npm run test:rn -- -c && cp ./coverage/coverage-final.json ./coverage/coverage-rn-final.json && node ./scripts/jest/mapCoverage.js",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "authors": "git log --format='%aN <%aE>' | sort -u | grep -v 'users.noreply.github.com' > AUTHORS",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "bash scripts/release.sh"
  },
  "peerDependencies": {
    "react": ">=16.3.1",
    "react-dom": ">=16.3.1"
  },
  "dependencies": {
    "better-scroll": "1.15.1",
    "classnames": "2.2.6",
    "color": "^3.1.0",
    "create-react-context": "0.2.3",
    "hoist-non-react-statics": "^3.3.0",
    "lodash": "^4.17.15",
    "normalize.css": "8.0.1",
    "popper.js": "^1.15.0",
    "raf": "^3.4.1",
    "react-native-camera-roll-picker": "1.2.3"
  },
  "devDependencies": {
    "@babel/standalone": "^7.0.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@sentry/browser": "^5.6.1",
    "@types/classnames": "^2.2.3",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.11",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.9.0",
    "@types/react-native": "^0.60.7",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@zarm-design/cli": "^0.0.28",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "browserslist": "^4.6.6",
    "change-case": "^4.1.1",
    "concurrently": "^5.2.0",
    "conventional-changelog-cli": "^2.0.34",
    "core-js": "^3.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "docsearch.js": "^2.6.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.7.0",
    "eslint-config-za": "^2.2.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "gh-pages": "^2.2.0",
    "highlight.js": "^10.0.3",
    "history": "^4.7.2",
    "husky": "^4.2.5",
    "is-wsl": "^2.1.0",
    "istanbul-api": "^3.0.0",
    "lint-staged": "^10.2.2",
    "marked": "^1.0.0",
    "prop-types": "^15.6.2",
    "qrious": "^4.0.2",
    "raw-loader": "^4.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^6.0.0",
    "react-hot-loader": "^4.12.13",
    "react-intl": "^4.6.6",
    "react-loadable": "^5.5.0",
    "react-native": "^0.60.5",
    "react-native-mock-render": "0.1.5",
    "react-navigation": "^4.0.3",
    "react-router-dom": "^5.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.0.0",
    "stylelint-config-za": "^0.1.0",
    "typescript": "4.0.2",
    "zarm-web": "0.0.1-alpha.10"
  },
  "lint-staged": {
    "components/**/*.{ts,tsx}": "eslint",
    "{components,site,rnkit}/**/*.{js,jsx}": "eslint",
    "rnkit/pages/**/*.{js,jsx}": "eslint",
    "{styles,site}/**/*.scss": "stylelint"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 9",
    "iOS >= 7",
    "Android >= 4"
  ],
  "sideEffects": [
    "dist/*",
    "components/style/*",
    "components/**/style/*",
    "es/**/style/*",
    "lib/**/style/*",
    "site/**/**.scss"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
